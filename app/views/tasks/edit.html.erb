<h1>Edit <%= @task.title %></h1>
<%= form_for @task do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: 'Task title', class: ''%>
  </div>

  <div>
    <%= f.label :details %>
    <%= f.text_field :details %>
  </div>

  <div>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  </div>

  <%= f.submit %>
<% end %>

