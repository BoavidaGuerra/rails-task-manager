<h1>My tasks</h1>
<section class="tasks-list">
  <ul>
    <% @tasks.each do |task| %>
      <li><%= task.completed ? '☑️' : '🔳' %> <%= link_to task.title, task_path(task) %><%= link_to "🗑️", task_path(task), method: :delete, data: { confirm: "Delete #{task.title}" } %></li>
    <% end %>
  </ul>
</section>

<section class="actions">
  <ul>
    <li><%= link_to '＋ Add a New Task', new_task_path %></li>
  </ul>
</section>
