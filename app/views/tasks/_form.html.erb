<%= form_for task do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: 'Task title', class: ''%>
  </div>

  <div>
    <%= f.label :details %>
    <%= f.text_field :details %>
  </div>
  <% unless f.object.new_record? %>
    <div>
      <%= f.label :completed %>
      <%= f.check_box :completed %>
    </div>
 <% end %>
  <%= f.submit %>
<% end %>
